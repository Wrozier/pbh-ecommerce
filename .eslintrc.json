{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-undef": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^(_|localFont)$", "argsIgnorePattern": "^_" }],
    "react/prop-types": "off",
    "react/no-unknown-property": ["error", { "ignore": ["cmdk-input-wrapper"] }],
    "@next/next/no-img-element": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}